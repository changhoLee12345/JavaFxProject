<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<BorderPane
	style="-fx-background-image: url(/images/kakao.gif); -fx-background-position: center;"
	stylesheets="@Style.css" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets topRightBottomLeft="20" />
	</padding>
	<center>
		<GridPane hgap="10" vgap="10" BorderPane.alignment="CENTER">
			<children>
				<Label prefWidth="50"
					style="-fx-background-color: yellow; -fx-text-fill: green;"
					text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
				<Label prefWidth="50" text="Korean" GridPane.columnIndex="0"
					GridPane.rowIndex="1" />
				<Label prefWidth="50" styleClass="whiteColor" text="Math"
					GridPane.columnIndex="0" GridPane.rowIndex="2" />
				<Label prefWidth="50" styleClass="whiteColor" text="English"
					GridPane.columnIndex="0" GridPane.rowIndex="3" />
				<TextField id="txtName" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="0" />
				<TextField id="txtKorean" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<TextField id="txtMath" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="2" />
				<TextField id="txtEnglish" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="3" />
			</children>
			<columnConstraints>
				<ColumnConstraints />
				<ColumnConstraints />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
			</rowConstraints>
		</GridPane>
	</center>
	<bottom>
		<HBox prefHeight="100.0" prefWidth="200.0" spacing="20"
			BorderPane.alignment="CENTER">
			<BorderPane.margin>
				<Insets topRightBottomLeft="10" />
			</BorderPane.margin>
			<children>
				<Button id="btnFormAdd"
					style="-fx-background-color: yellow; -fx-text-fill: blue; -fx-font-size: 20;"
					text="Save" />
				<Button id="btnFormCancel" text="Cancel" />
			</children>
		</HBox>
	</bottom>
</BorderPane>
